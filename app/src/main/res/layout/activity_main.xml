<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".Level1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="510dp"
        android:layout_height="803dp"
        app:srcCompat="@drawable/nuagesvre"
        tools:layout_editor_absoluteX="-76dp"
        tools:layout_editor_absoluteY="-25dp" />

    <ImageView
        android:id="@+id/water"
        android:layout_width="1850dp"
        android:layout_height="1711dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dgrad" />

    <ImageView
        android:id="@+id/dauphin"
        android:layout_width="84dp"
        android:layout_height="209dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dauphindetoure2_removebg_preview" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="392dp"
        android:layout_height="59dp"
        android:max="100"
        android:progress="50"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textJump"
        android:layout_width="357dp"
        android:layout_height="242dp"
        android:text="JUMP!!"
        android:textSize="100dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:text="Score : 0"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/bestScore_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

</androidx.constraintlayout.widget.ConstraintLayout>